<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#AA000000"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/version_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#33000000"
                android:gravity="left"
                android:text="@string/version" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/user_name_title"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="#33000000"
                android:gravity="center"
                android:text="User Name" />

            <TextView
                android:id="@+id/user_name_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#11000000"
                android:gravity="center"
                android:text="anonimous" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/android_battery_title"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="#33000000"
                android:gravity="center"
                android:text="Battery(android)" />

            <TextView
                android:id="@+id/android_battery_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#11000000"
                android:gravity="center"
                android:text="0/100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/roomba_battery_title"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="#33000000"
                android:gravity="center"
                android:text="Battery(roomba)" />

            <TextView
                android:id="@+id/roomba_battery_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#11000000"
                android:gravity="center"
                android:text="0/100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bumper_title"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="#33000000"
                android:gravity="center"
                android:text="bumper" />

            <TextView
                android:id="@+id/bumper_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#11000000"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/network_title"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="#33000000"
                android:gravity="center"
                android:text="Network" />

            <TextView
                android:id="@+id/network_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#11000000"
                android:gravity="center"
                android:text="off" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:background="#00000000"
        android:layout_height="0dp"
        android:layout_weight="1" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#AA000000"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/status_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#11000000"
            android:gravity="center"
            android:text="status" />
        
		<View
        	android:layout_width="0dp"
        	android:layout_height="0dp"
        	android:layout_weight="1" />
        
        <DigitalClock
            android:id="@+id/digitalClock1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="DigitalClock" />
    </LinearLayout>

</LinearLayout>